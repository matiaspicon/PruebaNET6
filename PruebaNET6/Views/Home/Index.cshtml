@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Datos del usuario</h1> 
    
    @if(User.Identity.IsAuthenticated){

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                    Tipo de Claim
                    </th>
                    <th>
                        Tipo de Valor
                    </th>
                    <th>
                        Valor
                    </th>
                </tr>                
            </thead>
            <tbody>
                @foreach(var claim in User.Claims)
                {
                    <tr>
                        <td>
                            @claim.Type
                        </td>
                        <td>
                            @claim.ValueType
                        </td>
                        <td>
                            @claim.Value
                        </td>
                    </tr>                        
                }
            </tbody>
        </table>
        

    }


</div>
